function _cleandir()
{
    local ask=""
    if [[ -n "$CLEAN_ASK" ]]; then
        ask="-i"
    fi
    for pattern in ${CLEAN[@]}
    do
        for file in "${pattern}"
	do
	    if [ -f "$file" ]; then
	        rm ${ask} "$file" "$@"
		if [ "$CLEAN_ASK" != "true" ]; then
		    echo "cleandir: removing $file"
                fi
            fi
        done
    done
}
_cleandir "$@"
